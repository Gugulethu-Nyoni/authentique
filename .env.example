# ===== Core Authentication =====
APP_ENV=production
APP_PORT=3000
JWT_SECRET=your_strong_jwt_secret_here_at_least_32_chars
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# ===== MySQL/MariaDB =====
DB_MYSQL_HOST=localhost
DB_MYSQL_PORT=3306
DB_MYSQL_USER=auth_service
DB_MYSQL_PASSWORD=strongpassword123!
DB_MYSQL_NAME=auth_prod
DB_MYSQL_POOL_LIMIT=10

# ===== SQLite =====
DB_SQLITE_PATH=./data/auth.db
DB_SQLITE_MODE=wal  # wal|truncate|memory

# ===== Supabase =====
DB_SUPABASE_URL=https://your-project-ref.supabase.co
DB_SUPABASE_KEY=your-anon-key
DB_SUPABASE_JWT_SECRET=your-jwt-secret

# ===== MongoDB =====
DB_MONGO_URI=mongodb://user:pass@host:27017/auth_db?authSource=admin&tls=true
DB_MONGO_POOL_SIZE=10
DB_MONGO_RETRY_WRITES=true

# ===== Email Service (Resend) =====
RESEND_API_KEY=re_123456789
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME="Authentique Auth"

# ===== Social Auth =====
# GitHub
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_secret
# Google
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_secret
# Facebook
FB_CLIENT_ID=your_fb_app_id
FB_CLIENT_SECRET=your_fb_app_secret