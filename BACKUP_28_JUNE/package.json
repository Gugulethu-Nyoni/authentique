{
  "name": "authentique",
  "version": "1.0.0",
  "description": "Framework-agnostic authentication stack with adapters for multiple databases and social providers",
  "type": "module",
  "scripts": {
    "test": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest --coverage --config=jest.config.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "start": "node examples/server.js",
    "dev": "nodemon --experimental-vm-modules examples/server.js",
    "typecheck": "tsc --noEmit",
    "prepare": "husky install",
    "migrate": "node bin/migrate.js run",
    "migrate:rollback": "node bin/migrate.js rollback",
    "migrate:refresh": "npm run migrate:rollback -- 999 && npm run migrate",
    "start-server": "node index.js"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "mailgun-js": "^0.22.0",
    "mysql2": "^3.14.1",
    "nanoid": "^5.0.4",
    "nodemailer": "^7.0.3",
    "resend": "^4.6.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.3",
    "eslint": "^8.57.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2"
  },
  "peerDependencies": {
    "@supabase/supabase-js": "^2.39.8",
    "mongodb": "^6.0.0",
    "sqlite3": "^5.1.7"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "authentication",
    "auth",
    "jwt",
    "oauth",
    "password-hashing",
    "database-adapters"
  ],
  "license": "MIT",
  "files": [
    "lib/**/*"
  ]
}
