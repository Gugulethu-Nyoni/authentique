{
  "name": "authentique",
  "version": "1.0.0",
  "description": "Framework-agnostic authentication stack with adapters for multiple databases and social providers",
  "type": "module",
  "bin": {
    "authentique-init": "./bin/init.js",
    "authentique-migrate": "./bin/migrate.js"
  },
  "scripts": {
    "test": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "start": "node examples/server.js",
    "dev": "nodemon --experimental-vm-modules examples/server.js",
    "typecheck": "tsc --noEmit",
    "postinstall": "node -e \"import('fs').then(fs => fs.chmodSync('./bin/init.js', '755') && fs.chmodSync('./bin/migrate.js', '755'))\"",
    "prepare": "npm run postinstall > /dev/null 2>&1",
    "prepublishOnly": "npm run test && npm run lint",
    "init": "authentique-init",
    "migrate": "authentique-migrate run",
    "migrate:rollback": "authentique-migrate rollback",
    "migrate:refresh": "npm run migrate:rollback -- 999 && npm run migrate",
    "start-server": "concurrently \"node src/http/server.js\" \"serve src/http/ui\"",
    "setup": "npm run init && npm run migrate && npm run start-server"
  },
  "config": {
    "unsafe-perm": true
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.50.2",
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^8.6.0",
    "chalk": "^5.4.1",
    "dotenv": "^16.4.1",
    "inquirer": "^9.2.17",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.17.0",
    "mysql2": "^3.14.1",
    "resend": "^4.6.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.3",
    "concurrently": "^8.2.2",
    "eslint": "^9.0.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "serve": "^14.2.1",
    "sqlite3": "^5.1.7"
  },
  "peerDependencies": {
    "express": "^4.18.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "authentication",
    "auth",
    "jwt",
    "oauth",
    "password-hashing",
    "database-adapters"
  ],
  "license": "MIT",
  "files": [
    "bin/",
    "src/",
    "config-templates/",
    "templates/"
  ]
}
